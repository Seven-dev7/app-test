<h2 class="text-center mb-3"> Nombre de Francais expatriés / année</h2>

<div class="table-responsive">
    <table class="table table-sm table-bordered">
        <thead class="thead-dark">
            <tr>
            <% @foreigner_year.sort.each do |fy| %>
                <th><%= fy %></th>
            <%end%>
            </tr>
        </thead>
        <tbody>
            <tr>
            <% @foreigner_number.each do |fd| %>
                <th><%= fd %></th>
            <%end%>
            </tr>
        </tbody>
    </table>
</div>