<%= link_to 'Accueil', root_path, class:'btn bg-purple'%>

<div class="container">
    <h1 class="text-center m-4 p-3">Listes des Pays</h1>
        <table class="table table-hover table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Nom du pays(FR)</th>
            </tr>
        </thead>
        <% @countries.sort.each do |country|%>
        <tbody>
            <tr>
                <td><%= link_to "#{country.name_fr}", country_path(country.id), class: ''%></td>
            </tr>
        </tbody>
        <%end%>
    </table>
</div>

